<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="projects_db_tree" model="ir.ui.view">
        <field name="name">projects.db.tree</field>
        <field name="model">projects.db</field>
        <field name="arch" type="xml">
            <tree string="projects">
                <field name="name"/>
                <field name="topic"/>
                <field name="description"/>
            </tree>
        </field>
    </record>


    <record id="projects_db_form" model="ir.ui.view">
        <field name="name">projects.db.form</field>
        <field name="model">projects.db</field>
        <field name="arch" type="xml">
            <form string="projects">
                <sheet>
                    <group>
                        <group>
                        <field name="name"/>
                        <field name="topic"/>
                            </group>
                        <group>
                            <field name="description"/>
                        </group>

                    </group>
                    <group>
                            <field name="periods_ids"/>
                        </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>