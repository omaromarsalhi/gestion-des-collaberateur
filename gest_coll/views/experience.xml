<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="experience_db_tree" model="ir.ui.view">
        <field name="name">experience.db.tree</field>
        <field name="model">experience.db</field>
        <field name="arch" type="xml">
            <tree string="experience">
                <field name="name"/>
                <field name="begin_date"/>
                <field name="end_date"/>
                <field name="description"/>
            </tree>
        </field>
    </record>


    <record id="experience_db_form" model="ir.ui.view">
        <field name="name">experience.db.form</field>
        <field name="model">experience.db</field>
        <field name="arch" type="xml">
            <form string="experience">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="begin_date"/>
                        </group>
                        <group>
                            <field name="end_date"/>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>